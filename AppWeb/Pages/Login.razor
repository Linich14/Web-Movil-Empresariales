@page "/Login"
@layout LoginLayout

<PageTitle>Inicio de sesion</PageTitle>

<div class="flex">
    <div class="flex w-3/5">
        <div class="mx-auto my-auto">
            <div class="flex justify-center">
                <div class="bg-[#f8fafc] p-4 mx-8 rounded-bl-[35px] rounded-tr-[35px]">
                    <img src="./images/logo.png" alt="logo">
                </div>
            </div>
            <h1 class="text-white p-4 text-3xl font-bold">IMPORTACIONES Y EXPORTACIONES DE MATERIAS PRIMAS</h1>
        </div>
    </div>
    <div class="flogin text-white flex w-2/5">
        <div class="p-16 my-auto">
            <h1 class="pl-10 py-16 text-4xl font-bold">Inicio de sesion</h1>
            <div class="p-2 pl-16">
                <div class="py-6">
                    <h1 class="py-2 text-lg">Usuario</h1>
                    <input type="text" placeholder="Ingresa tu usuario" class="w-96 border-white text-white p-1 pl-2 bg-transparent !important appearance-none border-x-0 border-b-2 border-t-0 transition duration-300 ease-in-out hover:scale-110 focus:border-zinc-300 focus:ring-0 delay-150hover:-translate-y-1">
                </div>
                <div>
                    <h1 class="py-2 text-lg">Contraseña</h1>
                    <input type="password" placeholder="Ingresa tu contraseña" class="w-96 border-white text-white p-1 pl-2 bg-transparent !important appearance-none border-x-0 border-b-2 border-t-0 transition duration-300 ease-in-out hover:scale-110 focus:border-zinc-300 focus:ring-0 delay-150hover:-translate-y-1">
                </div>
                <div class="p-2 py-16 flex">
                    <button class="bg-[#16B213] p-2 px-4 mx-4 ml-2 font-bold transition duration-300 ease-in-out hover:scale-110 focus:border-zinc-300">Iniciar sesion</button>
                    <a class="mx-2 transition duration-300 ease-in-out hover:scale-110 focus:border-zinc-300" href="#">¿Olvidaste tu contraseña?</a>
                </div>
            </div>
        </div>
    </div>
</div>

