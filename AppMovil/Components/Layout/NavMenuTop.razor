<div class="relative">
    <!-- Botón de hamburguesa -->
    <Div Class="bg-zinc-400 mx-2 my-1 flex w-auto rounded-lg opacity-85">
        <button class="p-3 w-16 ml-auto" @onclick="ToggleSidebar">
            <svg xmlns="http://www.w3.org/2000/svg" class="text-black fill-black stroke-black opacity-100" height="32px" viewBox="0 -960 960 960" width="32px" fill="#e8eaed"><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z" /></svg>
        </button>
    </Div>

    <!-- Sidebar overlay -->
    @if (isSidebarVisible)
    {
        <div class="inset-0 bg-gray-800 fixed bg-opacity-75 transition-opacity" @onclick="CloseSidebar">
            <div class="inset-y-0 left-0 bg-white absolute w-3/5 shadow-lg" @onclick:stopPropagation="true">
                <h1 class="p-2 bg-lime-400 w-full text-2xl">Mas agro</h1>
                <nav class="px-6 flex flex-col text-lg">
                    <NavLink class="py-2 px-2 flex items-center rounded-lg hover:bg-gray-200" href="informacionviajeActual" @onclick="CloseSidebar">
                        <Icon Name="IconName.Info" Class="w-6 h-6 mr-2" />
                        <span>Info Viaje</span>
                    </NavLink>
                    <NavLink class="py-2 px-2 flex items-center rounded-lg hover:bg-gray-200" href="perfil" @onclick="CloseSidebar">
                        <Icon Name="IconName.UserCircle" Class="w-6 h-6 mr-2" />
                        <span>Perfil</span>
                    </NavLink>
                    <NavLink class="py-2 px-2 flex items-center rounded-lg hover:bg-gray-200" href="registroViajeActual" @onclick="CloseSidebar">
                        <Icon Name="IconName.Map" Class="w-6 h-6 mr-2" />
                        <span>Registro Viaje</span>
                    </NavLink>
                    <NavLink class="py-2 px-2 flex items-center rounded-lg hover:bg-gray-200" href="historialActividades" @onclick="CloseSidebar">
                        <Icon Name="IconName.History" Class="w-6 h-6 mr-2" />
                        <span>Actividades</span>
                    </NavLink>
                </nav>
            </div>
        </div>
    }
</div>

@code {
    private bool isSidebarVisible = false;

    private void ToggleSidebar()
    {
        isSidebarVisible = !isSidebarVisible;
    }

    private void CloseSidebar()
    {
        isSidebarVisible = false;
    }
}